<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_group"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:id="@+id/rel_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >

            <TextView
                android:id="@+id/group_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_font_size"
                android:text="Group Name"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leader"
                android:textSize="@dimen/leader_font_size"
                android:id="@+id/leader_label"
                android:layout_below="@+id/group_name_label"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mission"
                android:maxLines="2"
                android:maxLength="100"
                android:ellipsize="end"
                android:singleLine="false"
                android:id="@+id/group_mission_label"
                android:layout_below="@+id/leader_label"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/group_support_label"
                android:text="Tags of Support"
                android:layout_below="@+id/group_mission_label"
                android:paddingTop="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/group_total_points"
                android:text="Total Points"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/group_against_label"
                android:text="Tags of Against"
                android:layout_below="@+id/group_support_label"
                />

            <TextView
                android:id="@+id/amount_members_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number Of Members"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />


            <TextView
                android:id="@+id/number_posts_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Posts"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />



        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>